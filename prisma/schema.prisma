datasource db {
   provider = "sqlite"
   url      = env("DATABASE_URL")
}

generator client {
   provider        = "prisma-client-js"
   output          = "../generated/prisma"
   previewFeatures = ["driverAdapters"]
}

enum SenderType {
   USER
   ASSISTANT
   FILE
}

model Transaction {
   id          Int      @id @default(autoincrement())
   description String
   category    String
   amount      Float
   currency    String
   date        DateTime
   createdAt   DateTime @default(now())
   updatedAt   DateTime @updatedAt
}

model Message {
   id        Int        @id @default(autoincrement())
   content   String
   sender    SenderType
   link      String?
   createdAt DateTime   @default(now())
   updatedAt DateTime   @updatedAt
}
